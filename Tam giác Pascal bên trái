    #include <bits/stdc++.h>
    using namespace std;
    int main(int argc, char const *argv[])
    {
        int a; cin >> a;
        for (int i = 0; i < a; i++)
        {
            for (int j = a-1; j >= i; j--)
            {
                cout << " ";
            }
            for (int j = 0; j <= i; j++)
            {
                cout << "*";
            }
            cout << endl;
        }
        for (int i = 1; i < a; i++)
        {
            for (int j = 0; j < i+1; j++)
            {
                cout << " ";
            }
            for (int j = a-1; j >= i; j--)
            {
                cout << "*";
            }
            cout << endl;
        }
        return 0;
    }
